{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "allowUnreachableCode": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "types",
    "../spec/src/**/*.ts",
  "../sdk/src/**/*.ts"
  ],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
